{
	"name": "hy-ui",
	"version": "0.0.4",
	"description": "基于vue的echarts组件",
	"main": "lib/hyui.min.js",
	"files": [
		"src",
		"lib",
		"yarn.lock"
	],
	"scripts": {
		"bootstrap": "yarn || npm i",
		"lint": "eslint --ext .js,.vue src packages test",
		"lint:fix": "eslint --fix --ext .js,.vue src packages test",
		"build": "cross-env NODE_ENV=production rollup -c build/rollup.prod.js",
		"dev": "rollup -c build/rollup.dev.js --watch",
		"lint-staged": "pretty-quick --staged",
		"test": "jest --coverage",
		"deploy": "yarn publish",
		"serve": "npm run dev",
		"prebuild": "npm run lint:fix"
	},
	"keywords": [
		"hy-ui",
		"echarts"
	],
	"author": "Hyhello",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Hyhello/e-charts/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Hyhello/e-charts.git"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"**/*.js": [
			"eslint --ext .js",
			"prettier --write",
			"git add ."
		]
	},
	"engines": {
		"node": ">=4.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.4.5",
		"@babel/node": "^7.4.5",
		"@babel/preset-env": "^7.4.5",
		"@babel/register": "^7.4.4",
		"@commitlint/cli": "^8.0.0",
		"@commitlint/config-conventional": "^8.0.0",
		"@vue/babel-helper-vue-jsx-merge-props": "^1.0.0",
		"@vue/babel-preset-jsx": "^1.1.2",
		"autoprefixer": "^9.7.1",
		"babel-eslint": "^10.0.3",
		"babel-jest": "^24.8.0",
		"chalk": "^2.4.2",
		"cross-env": "^5.2.0",
		"cssnano": "^4.1.10",
		"eslint": "^5.0.0",
		"eslint-config-airbnb-base": "^13.1.0",
		"eslint-config-prettier": "^5.0.0",
		"eslint-friendly-formatter": "^4.0.1",
		"eslint-import-resolver-alias": "^1.1.2",
		"eslint-plugin-import": "^2.17.3",
		"eslint-plugin-jest": "^22.7.1",
		"eslint-plugin-prettier": "^3.1.0",
		"eslint-plugin-vue": "^5.2.3",
		"husky": "^2.4.1",
		"jest": "^24.8.0",
		"lint-staged": "^8.2.1",
		"node-sass": "^4.13.0",
		"postcss": "^7.0.21",
		"prettier": "^1.18.2",
		"pretty-quick": "^1.11.1",
		"rollup": "^1.15.6",
		"rollup-plugin-alias": "^1.5.2",
		"rollup-plugin-babel": "^4.3.2",
		"rollup-plugin-commonjs": "^10.0.0",
		"rollup-plugin-eslint": "^6.0.0",
		"rollup-plugin-filesize": "^6.0.0",
		"rollup-plugin-json": "^4.0.0",
		"rollup-plugin-livereload": "^1.0.1",
		"rollup-plugin-node-resolve": "^5.0.3",
		"rollup-plugin-postcss": "^2.0.3",
		"rollup-plugin-replace": "^2.2.0",
		"rollup-plugin-serve": "^1.0.2",
		"rollup-plugin-terser": "^5.0.0",
		"rollup-plugin-vue": "^4.7.2",
		"rollup-watch": "^4.3.1",
		"vue-eslint-parser": "^6.0.4",
		"vue-template-compiler": "^2.6.11"
	},
	"peerDependencies": {
		"resize-observer-polyfill": "^1.5.1",
		"vue": "^2.6.11"
	},
	"dependencies": {
		"fecha": "^4.2.0",
		"resize-observer-polyfill": "^1.5.1",
		"vue": "^2.6.11"
	}
}
